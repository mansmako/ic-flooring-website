---
/**
 * Uses images already in /public/images/
 * You can change `href` later when you have real project pages.
 */
const projects = [
  {
    title: "Warehouse Epoxy (12,000 m²)",
    sector: "Logistics",
    year: "2025",
    img: "/images/ic-flooring-website (10).jpg",
    href: "#"
  },
  {
    title: "Retail PU System (2,400 m²)",
    sector: "Retail",
    year: "2024",
    img: "/images/ic-flooring-website (3).jpg",
    href: "#"
  },
  {
    title: "Food Processing Floor (3,100 m²)",
    sector: "Manufacturing",
    year: "2024",
    img: "/images/ic-flooring-website (4).jpg",
    href: "#"
  },
  {
    title: "Workshop Polished Concrete",
    sector: "Automotive",
    year: "2025",
    img: "/images/ic-flooring-website (5).jpg",
    href: "#"
  },
];
---

<section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-20 bg-black">
  <h2 class="text-2xl md:text-3xl font-bold text-white">Projects</h2>

  <!-- 1 col (mobile), 2 (sm), 3 (lg) -->
  <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {projects.map((p) => (
      <a
        href={p.href}
        class="block rounded-2xl focus:outline-none
               focus:ring-2 focus:ring-offset-2 focus:ring-white/70 focus:ring-offset-black
               group"
      >
        <div
          class="rounded-2xl border border-white/10 overflow-hidden bg-white transition
                 hover:ring-2 hover:ring-white/70
                 hover:shadow-[0_0_36px_rgba(255,255,255,0.35)] hover:-translate-y-0.5
                 hover:scale-[1.01] will-change-transform"
        >
          <!-- Fixed frame keeps uniform heights; image fills without distortion -->
          <div class="relative w-full aspect-[4/3] md:aspect-[3/2]">
            {p.img ? (
              <img
                src={p.img}
                alt={p.title}
                class="absolute inset-0 h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.02]"
                loading="lazy"
                decoding="async"
                width="1200"
                height="800"
                sizes="(min-width:1024px) 33vw, (min-width:640px) 50vw, 100vw"
              />
            ) : (
              <div class="absolute inset-0 grid place-items-center bg-[linear-gradient(120deg,#e8e8e8,#f6f6f6)] text-neutral-500 text-sm">
                Project photo coming soon
              </div>
            )}

            <!-- Context chip (dark glass for readability on images) -->
            <div class="absolute inset-x-0 bottom-0 p-3">
              <span class="inline-flex items-center rounded-full bg-black/60 backdrop-blur px-2 py-0.5 text-xs font-medium text-white">
                {p.sector} • {p.year}
              </span>
            </div>
          </div>

          <div class="p-4">
            <h3 class="font-semibold text-neutral-900">{p.title}</h3>
          </div>
        </div>
      </a>
    ))}
  </div>
</section>
