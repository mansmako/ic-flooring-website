<section id="process" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-20">
  <h2 class="text-2xl md:text-3xl font-bold">Our Process</h2>
  <div class="mt-8 grid gap-6 md:grid-cols-4">
    {[
      {step: '1', title: 'Site Visit', text: 'Assess substrate, traffic, chemicals, downtime.'},
      {step: '2', title: 'Specification', text: 'We propose systems & finishes suitable for your use.'},
      {step: '3', title: 'Installation', text: 'Surface prep, application, curing and QA.'},
      {step: '4', title: 'Aftercare', text: 'Maintenance plan & warranty support.'},
    ].map(s => (
      <div class="p-6 rounded-2xl border border-neutral-200">
        <div class="text-brand-red font-bold">{s.step}</div>
        <div class="mt-2 font-semibold">{s.title}</div>
        <p class="mt-2 text-sm text-neutral-600">{s.text}</p>
      </div>
    ))}
  </div>
</section>
