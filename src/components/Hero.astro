<section id="heroSection" class="relative overflow-hidden min-h-[90vh] group">
  <!-- Background: single image + slight blur + dark gradient -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-cover bg-center scale-[1.06]"
         style="background-image:url('/images/hero/ic-flooring-website%20(2).jpg'); filter: blur(2px);"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/40 to-black/30"></div>
  </div>

  <!-- Content -->
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-28 sm:py-32 text-white
              transition-transform duration-300 ease-out group-hover:scale-[1.01]">
    <h1 id="heroTitle"
        class="text-4xl md:text-6xl font-extrabold tracking-tight leading-tight
               transition-[opacity,transform,filter] duration-500 ease-out
               drop-shadow-[0_0_12px_rgba(0,0,0,0.45)]
               group-hover:drop-shadow-[0_0_26px_rgba(255,255,255,0.35)]
               group-hover:scale-[1.01]">
      Bespoke Tiling & Architectural Surfaces<br class="hidden md:block" />
      for Exceptional Homes & Landmark Spaces.
    </h1>

    <p class="mt-6 text-lg max-w-2xl transition duration-300 ease-out
              group-hover:drop-shadow-[0_0_18px_rgba(255,255,255,0.25)]">
      Porcelain, natural stone, and timber wall cladding executed with millimetre precision.
      Pools, staircases, patios, spa areas — quiet luxury, built to last. Tender-ready for
      hospitality, retail, and public institutions.
    </p>

    <div class="mt-8 flex gap-4">
      <a href="/quote"
         class="px-5 py-3 rounded-full bg-brand-red text-white font-medium shadow-soft
                transition transform
                hover:-translate-y-0.5
                hover:ring-2 hover:ring-white/70
                hover:shadow-[0_0_36px_rgba(255,255,255,0.35)]">
        Request a Private Quote
      </a>
      <a href="#process"
         class="px-5 py-3 rounded-full border border-white/40 bg-white/10 backdrop-blur-md
                transition transform
                hover:-translate-y-0.5 hover:border-white hover:bg-white/15
                hover:ring-2 hover:ring-white/60
                hover:shadow-[0_0_36px_rgba(255,255,255,0.35)]">
        Our Process
      </a>
      <a href="/projects"
         class="px-5 py-3 rounded-full border border-white/40 bg-white/10 backdrop-blur-md hidden sm:inline-block
                transition transform
                hover:-translate-y-0.5 hover:border-white hover:bg-white/15
                hover:ring-2 hover:ring-white/60
                hover:shadow-[0_0_36px_rgba(255,255,255,0.35)]">
        View Projects
      </a>
    </div>

    <!-- Mini gallery -->
    <div class="mt-12 grid gap-4 sm:grid-cols-3">
      <div class="group/card rounded-2xl overflow-hidden border border-white/20 h-56 sm:h-64 md:h-72
                  transition hover:shadow-[0_0_34px_rgba(255,255,255,0.30)]">
        <img src="/images/ic-flooring-website%20(4).jpg" alt="Large-format porcelain, patio detail"
             class="w-full h-full object-cover transition-transform duration-300 group-hover/card:scale-95"
             loading="lazy" decoding="async" />
      </div>
      <div class="group/card rounded-2xl overflow-hidden border border-white/20 h-56 sm:h-64 md:h-72
                  transition hover:shadow-[0_0_34px_rgba(255,255,255,0.30)]">
        <img src="/images/ic-flooring-website%20(5).jpg" alt="Teak feature wall, shadow-gap detail"
             class="w-full h-full object-cover transition-transform duration-300 group-hover/card:scale-95"
             loading="lazy" decoding="async" />
      </div>
      <div class="group/card rounded-2xl overflow-hidden border border-white/20 h-56 sm:h-64 md:h-72
                  transition hover:shadow-[0_0_34px_rgba(255,255,255,0.30)]">
        <img src="/images/ic-flooring-website%20(6).jpg" alt="Mitred stone staircase, continuous grain"
             class="w-full h-full object-cover transition-transform duration-300 group-hover/card:scale-95"
             loading="lazy" decoding="async" />
      </div>
    </div>
  </div>

  <!-- Scroll fade for the main title -->
  <script is:inline>
    (() => {
      const title = document.getElementById('heroTitle');
      const section = document.getElementById('heroSection');
      if (!title || !section) return;

      const reduce = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      const onScroll = () => {
        const rect = section.getBoundingClientRect();
        const end = Math.max(window.innerHeight * 0.4, 200); // fade out over ~40% viewport
        const y = Math.min(Math.max(-rect.top, 0), end);
        const t = y / end; // 0 → 1
        if (!reduce) {
          title.style.opacity = String(1 - t);
          title.style.transform = `translateY(${t * 10}px) scale(${1 - t * 0.03})`;
          title.style.filter = `drop-shadow(0 0 ${12 - t * 6}px rgba(0,0,0,0.45))`;
        }
      };
      onScroll();
      window.addEventListener('scroll', onScroll, { passive: true });
    })();
  </script>
</section>
