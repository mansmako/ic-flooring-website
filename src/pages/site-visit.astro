---
import Base from "@/layouts/Base.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<Base title="Site Visit & Assessment — IC Flooring">
  <Header slot="header" />

  <section class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-16">
    <h1 class="text-3xl font-bold">Book a Site Visit & Assessment</h1>
    <p class="mt-3 text-neutral-700">
      Tell us about your space and preferred timing. We’ll confirm availability and send a clear, line-item quote.
    </p>

    <form action="#" method="POST" class="mt-8 space-y-6">
      <input type="hidden" name="form" value="site-visit" />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium">Full Name</label>
          <input name="name" type="text" required autocomplete="name"
            class="mt-1 block w-full rounded-xl border border-neutral-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#B31217] focus:border-[#B31217]" />
        </div>
        <div>
          <label class="block text-sm font-medium">Phone</label>
          <input name="phone" type="tel" required autocomplete="tel"
            class="mt-1 block w-full rounded-xl border border-neutral-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#B31217] focus:border-[#B31217]" />
        </div>
        <div class="md:col-span-2">
          <label class="block text-sm font-medium">Email</label>
          <input name="email" type="email" autocomplete="email"
            class="mt-1 block w-full rounded-xl border border-neutral-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#B31217] focus:border-[#B31217]" />
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="md:col-span-2">
          <label class="block text-sm font-medium">Address / Site Location</label>
          <input name="address" type="text" required autocomplete="street-address"
            class="mt-1 block w-full rounded-xl border border-neutral-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#B31217] focus:border-[#B31217]" />
        </div>
        <div>
          <label class="block text-sm font-medium">City / Suburb</label>
          <input name="city" type="text" required
            class="mt-1 block w-full rounded-xl border border-neutral-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#B31217] focus:border-[#B31217]" />
        </div>
        <div>
          <label class="block text-sm font-medium">Province</label>
          <select name="province" required
            class="mt-1 block w-full rounded-xl border border-neutral-300 px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-[#B31217] focus:border-[#B31217]">
            <option value="">Select…</option>
            <option>Gauteng</option><option>Western Cape</option><option>KwaZulu-Natal</option>
            <option>Eastern Cape</option><option>Free State</option><option>Mpumalanga</option>
            <option>Limpopo</option><option>North West</option><option>Northern Cape</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium">Postal Code</label>
          <input name="postal_code" type="text" inputmode="numeric"
            class="mt-1 block w-full rounded-xl border border-neutral-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#B31217] focus:border-[#B31217]" />
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium mb-2">Services Required</label>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          {[
            "Laminate Flooring",
            "Vinyl Flooring (LVT/LVP or SPC)",
            "Real Wood (Engineered/Solid)",
            "Subfloor Prep & Levelling",
            "Repairs & Re-fits",
            "Skirting, Trims & Finishing"
          ].map((label) => (
            <label class="flex items-center gap-2 rounded-xl border border-neutral-300 px-3 py-2 cursor-pointer hover:border-[#B31217]">
              <input type="checkbox" name="services" value={label} class="accent-[#B31217]" />
              <span class="text-sm">{label}</span>
            </label>
          ))}
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium">Preferred Site Visit Date</label>
          <input name="preferred_date" type="date"
            class="mt-1 block w-full rounded-xl border border-neutral-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#B31217] focus:border-[#B31217]" />
        </div>
        <div>
          <label class="block text-sm font-medium">Best Time</label>
          <select name="best_time"
            class="mt-1 block w-full rounded-xl border border-neutral-300 px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-[#B31217] focus:border-[#B31217]">
            <option value="">Select…</option>
            <option>Morning</option><option>Afternoon</option><option>Anytime</option>
          </select>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium">Project Notes</label>
        <textarea name="notes" rows="4"
          class="mt-1 block w-full rounded-xl border border-neutral-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#B31217] focus:border-[#B31217]"
          placeholder="Area sizes, rooms, existing floor, access, parking, special requirements…"></textarea>
      </div>

      <div>
        <button type="submit"
          class="inline-flex items-center justify-center rounded-xl bg-[#B31217] px-5 py-3 text-white font-semibold hover:bg-[#8F0F13] transition">
          Send Request
        </button>
        <p class="mt-2 text-xs text-neutral-500">
          By submitting, you consent to us contacting you about this request. We won’t share your details.
        </p>
      </div>
    </form>
  </section>

  <Footer slot="footer" />
</Base>
